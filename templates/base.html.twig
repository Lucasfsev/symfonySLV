<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}SLV{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_script_tags('app') }}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('home') }}">Accueil</a>

        <a class="navbar-brand" href="{{ path('vehicle_list') }}">Nos offres</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_vehicle_crud_index') }}">Gestion des véhicules</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/logout">Se déconnecter</a></li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('vehicle_list') }}">Nos offres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    {% block body %}
    {% endblock %}
</div>

<footer class="text-center bg-dark text-white py-3">
    © 2024 Location de Véhicules Tous droits réservés

</footer>

</body>
</html>

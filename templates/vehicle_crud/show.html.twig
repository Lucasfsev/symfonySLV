{% extends 'base.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}
    <h1>Vehicle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicle.id }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ vehicle.capacity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ vehicle.price }}</td>
            </tr>
            <tr>
                <th>NumberKilometers</th>
                <td>{{ vehicle.numberKilometers }}</td>
            </tr>
            <tr>
                <th>NumberPlate</th>
                <td>{{ vehicle.numberPlate }}</td>
            </tr>
            <tr>
                <th>YearOfVehicle</th>
                <td>{{ vehicle.yearOfVehicle }}</td>
            </tr>
            <tr>
                <th>PicturePath</th>
                <td>{{ vehicle.picturePath }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_vehicle_crud_index') }}">back to list</a>

    <a href="{{ path('app_vehicle_crud_edit', {'id': vehicle.id}) }}">edit</a>

